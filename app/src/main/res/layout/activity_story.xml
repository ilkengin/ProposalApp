<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ilkengin.proposalapp.activities.StoryActivity"
    android:gravity="center"
    android:orientation="vertical">


    <com.yuyakaido.android.cardstackview.CardStackView
        android:id="@+id/activity_story_card_stack_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="32dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="32dp"
        app:elevationEnabled="true"
        app:scaleDiff="0.02"
        app:stackFrom="bottom"
        app:swipeDirection="horizontal"
        app:swipeEnabled="true"
        app:swipeThreshold="0.75"
        app:translationDiff="12"
        app:visibleCount="3" />

    <ProgressBar
        android:id="@+id/activity_story_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>
